<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowScoresResultFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/your-score-is"
        android:layout_width="269dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:text="@string/yourscoreis"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_result"
        android:layout_width="273dp"
        android:layout_height="121dp"
        android:layout_above="@+id/your-score-is"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-134dp"
        android:fontFamily="@font/advent_pro_light"
        android:text="00:01"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/percentage_result2"
        android:layout_width="273dp"
        android:layout_height="121dp"
        android:layout_below="@+id/scores2"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="80%"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scores2"
        android:layout_width="273dp"
        android:layout_height="121dp"
        android:layout_below="@+id/your-score-is"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="@string/score"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold" />

</RelativeLayout>